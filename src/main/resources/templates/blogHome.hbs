{{#partial "body"}}
    <div class="container">
        {{> component/navigationBar}}

        {{#each posts}}
            <div class="row">
                <div class="col-sm-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="/posts/{{id}}">{{title}}</a>
                            </h4>
                            <p class="card-text">{{content}}</p>
                            <p class="card-text">
                                <small class="text-muted">{{createdDate}}</small>
                                <br/>
                                <small class="text-muted">posted by {{writer}}</small>
                            </p>
                            <a href="/posts/{{id}}" class="btn btn-primary">Read more ... </a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/partial}}

{{> layout/baseLayout}}